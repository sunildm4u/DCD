<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
            
             <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

      <TableRow
            android:id="@+id/tableRow1"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:layout_weight="0.2"
            android:gravity="center_horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Contacts Count :"
                android:textColor="#3f9fe0"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView2"
                
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents total contacts count in your phone, Includes phone/email all"
                android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>

        </TableRow>

      <TableRow
            android:id="@+id/tableRow2"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_height="wrap_content" >
            
                  <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                 android:textColor="#3f9fe0"
                android:layout_height="wrap_content"
                android:text="Phone Contacts :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents number of phone contacts in your phone including all type of duplicates excluding email contact"
                android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>
        </TableRow>

      <TableRow
            android:id="@+id/tableRow5"
            android:layout_weight="0.2"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                       
                  <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unused Email Contacts :"
                 android:textColor="#3f9fe0"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents number of email contacts in your phone, Remember they have no numbers or contacts associated with them."
                 android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>
        </TableRow>

      <TableRow
            android:id="@+id/tableRow6"
            android:layout_weight="0.2"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                   <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                 android:textColor="#3f9fe0"
                android:layout_height="wrap_content"
                android:text="Number of Duplicate Contacts :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents number of duplicate phone contacts,Remember these are EXACT duplicates count."
                android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>
        </TableRow>
              <TableRow
            android:id="@+id/tableRow7"
            android:layout_weight="0.2"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                   
                     <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#3f9fe0"
                android:text="Number Based Duplicate Contacts :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents number of  Contacts having multiple contacts with same number but different names."
                 android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>
        </TableRow>
        
                            <TableRow
            android:id="@+id/tableRow3"
            android:layout_weight="0.2"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                   
                     <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#3f9fe0"
                android:text="Invisible/Empty Contacts :"
                android:textSize="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents number of  Invisible Contacst which are in system but not shown to user and Empty contacts which has only name but nothing else."
                 android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>
        </TableRow>

      <TableRow
            android:id="@+id/tableRow4"
            android:layout_weight="0.2"
             android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
                     
              
                     <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
           

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name Based Duplicate Contacts :"
                android:textSize="20dp"
                 android:textColor="#3f9fe0"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:layout_height="wrap_content"
                android:text="** Represents number of  Contacts having same Number soted in multiple contacts."
                 android:textAppearance="?android:attr/textAppearanceSmall" />
             </LinearLayout>
        </TableRow>
    </TableLayout>
      
    </ScrollView>

   

</LinearLayout>
