<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout 
    android:gravity="center_vertical|fill_vertical|left|right|top"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".MainActivity" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.77"
            android:paddingTop="20dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingLeft="15dp"
                android:paddingTop="20dp" >

                <TextView android:typeface="monospace"
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                    android:text="Total Contacts Count:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#3f9fe0"
                    android:textSize="20dp"
                    />

                <TextView 
                    android:id="@+id/totalcontactcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#3f9fe0"
                    android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:paddingLeft="15dp"
                android:paddingTop="20dp" >

         <TextView 
             android:id="@+id/phonenumberview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             
             android:gravity="center_vertical"
             android:text="Phone Contacts :"
             android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="#3f9fe0"
             android:textSize="20dp" />

        <TextView 
            android:id="@+id/phonenumbercount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:minHeight="50dp"
                 >

        <TextView 
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:gravity="center_vertical"
            android:text="Unused eMail Contacts:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

        <TextView 
            android:id="@+id/nonidcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

            </TableRow>
            
                        <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingLeft="15dp"
                android:minHeight="50dp"
                 >

        <TextView 
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:gravity="center_vertical"
            android:text="Empty/Invisible Contacts:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

        <TextView 
            android:id="@+id/invcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow44"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:minHeight="50dp"
                 >

        <TextView 
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Number of Exact Duplicates :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

        <TextView 
            android:id="@+id/duplicatecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

            </TableRow>
           <TableRow       android:id="@+id/tableRow45"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:minHeight="50dp">
               
               <TextView 
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Number Based Duplicates :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

        <TextView 
            android:id="@+id/duplicatecountonnumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />
               </TableRow>
              <TableRow       android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"
                android:minHeight="50dp">
               
               <TextView 
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:text="Name Based Duplicates :"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />

        <TextView 
            android:id="@+id/duplicatecountonnames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#3f9fe0"
            android:textSize="20dp" />
               </TableRow>

              <TableRow
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal|center_vertical|left"
                  android:paddingTop="20dp" >

                  <ImageView
                      android:id="@+id/imageView1"
                      android:layout_width="35dp"
                      android:layout_height="35dp"
                      android:onClick="showhelp"
                      android:paddingLeft="15dp"
                      android:scaleType="fitStart"
                      android:src="@drawable/help" />

              </TableRow>

            <TableRow
                android:gravity="center_horizontal|center_vertical"
                android:paddingTop="5dp" >

                <Button
                    android:id="@+id/viewduplicates"
                    style="@style/ButtonText"
        			android:background="@drawable/blue_btn"
        			 android:onClick="viewDpuplicates"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="View Duplicates" />

<!--                 <ImageView -->
<!--                     android:id="@+id/viewduplicates" -->
<!--                     android:layout_width="wrap_content" -->
<!--                     android:layout_height="match_parent" -->
<!--                     android:onClick="viewDpuplicates" -->
<!--                     android:src="@drawable/vd" /> -->
  
            </TableRow>
            
        </TableLayout>

        

</LinearLayout>
</ScrollView>